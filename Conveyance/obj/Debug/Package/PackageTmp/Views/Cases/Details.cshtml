    </dl>
</div>
<div>
    <hr />
    <h4>Parties</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Client
        </dt>
        @if (Model.ClientID == null)
        {
            <dd>
                *Unenrolled*
            </dd>
        }
        else
        {
            <dd>
                @Model.Client.UserName
            </dd>
        }
        @if (Model.Instruction == Conveyance.Models.Instruction.Buy)
        { 
            <dt>
                Solicitor of Seller
            </dt>
        }
        else
        { 
            <dt>
                Solicitor of Buyer
            </dt>
        }
        
        @if (Model.OpCaseID == null)
        {
            <dd>
                *Unenrolled*
            </dd>
        }
        else
        {
            <dd>
                @Model.OpCase.Solicitor.UserName
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CaseID }) |
